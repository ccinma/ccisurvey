@model ccisurvey.services.VMs.CreateSurveyViewModel;

@{
    ViewData["Title"] = "CreateSurvey";
}

<div class="all create">
    <div class="form-container pt-4 pb-3">
        <h1>Création d'un sondage</h1>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Label" class="control-label"></label>
                <input asp-for="Label" class="form-control" />
                <span asp-validation-for="Label" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group multiple justify-content-center mt-3">
                <input class="form-check-input" asp-for="IsMultipleChoice" />
                <p>Sondage à choix multiple</p>
            </div>
            <div class="form-group p-3 mas-btn-container">
                <button class="mas-btn mas-btn-white" type="submit" value="Ajouter les propositions" >
                    Passer à la suite
                </button>
            </div>
        </form>
    </div>
</div>
